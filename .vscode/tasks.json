{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build and Run C++ with graphics.h",
			"type": "shell",
			"command": "g++",
			"args": [
				"body/game-over-screen.c",
                "body/lives-display.c",
                "body/pacman-lives.c",
                "body/pacman-seruni.c",
                "body/pacman.c",
                "body/ghost.c",
                "body/powerup.c",
                "body/ui.c",
                "body/scoring.c",
				"${file}",
				"-o",
				"${fileDirname}/output.exe",
				"-lbgi",
				"-lgdi32",
				"-lcomdlg32",
				"-luuid",
				"-loleaut32",
				"-lole32",
				"-lwinmm"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": ["$gcc"],
			"detail": "Compile C++ with graphics.h in VS Code"
		}
	]
}
